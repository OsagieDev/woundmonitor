<h2>Enter Wound Information</h2>

<%= form_for @wound, :class => 'form-horizontal' do |f| %>

<div class="form-group">
  <%= label_tag :location, "Wound Location:", :class => "col-sm-2 control-label" %>
	<%= f.text_field :location, :class => 'form-control' %>
  <%= hidden_field_tag "patient_id", params[:format] %>
</div>

<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
	  <%= f.submit "Record Wound Location", :class => 'btn btn-small btn-primary' %>
	</div>
</div>

	<% if @wound.errors.any? %>
		<div class="alert alert-warning">
			<ul>
				<% @wound.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
<% end %>
