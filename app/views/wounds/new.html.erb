<%= link_to "Home", root_path %> - <%= link_to "Back To All Wounds", patient_path(params[:format]) %>
<hr>

<div  class="row-fluid wa-ctr-text">

<h4>Patient: <%= Patient.find(params[:format].to_i).name %></h4>
<h6>Enter Wound Location</h6>

<%= form_for @wound, :class => 'form-horizontal' do |f| %>

<div class="form-group">
  <%= f.text_field :location, :class => 'form-control' %>
  <%= hidden_field_tag "patient_id", params[:format] %>
</div>

<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
	  <%= f.submit "Record Wound Location", :class => 'btn btn-small btn-primary' %>
	</div>
</div>

	<% if @wound.errors.any? %>
		<div class="alert alert-warning">
			<ul>
				<% @wound.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
<% end %>


</div>